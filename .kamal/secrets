SECRETS=$(kamal secrets fetch --adapter 1password --account standardinnovation.1password.com --from employee/fizzy-site DIGITAL_OCEAN_REGISTRY_TOKEN GITHUB_ACCESS_TOKEN DATABASE_ADAPTER MYSQL_HOST MYSQL_PORT MYSQL_USER MYSQL_PASSWORD MYSQL_SSL_MODE ACTIVE_STORAGE_SERVICE S3_ACCESS_KEY_ID S3_BUCKET S3_REGION S3_SECRET_ACCESS_KEY S3_ENDPOINT SECRET_KEY_BASE POSTMARK_API_TOKEN VAPID_PUBLIC_KEY VAPID_PRIVATE_KEY)

DATABASE_ADAPTER=$(kamal secrets extract DATABASE_ADAPTER ${SECRETS})
MYSQL_HOST=$(kamal secrets extract MYSQL_HOST ${SECRETS})
MYSQL_PORT=$(kamal secrets extract MYSQL_PORT ${SECRETS})
MYSQL_USER=$(kamal secrets extract MYSQL_USER ${SECRETS})
MYSQL_PASSWORD=$(kamal secrets extract MYSQL_PASSWORD ${SECRETS})
MYSQL_SSL_MODE=$(kamal secrets extract MYSQL_SSL_MODE ${SECRETS})

KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract DIGITAL_OCEAN_REGISTRY_TOKEN ${SECRETS})

POSTMARK_API_TOKEN=$(kamal secrets extract POSTMARK_API_TOKEN ${SECRETS})

ACTIVE_STORAGE_SERVICE=$(kamal secrets extract ACTIVE_STORAGE_SERVICE ${SECRETS})
S3_ACCESS_KEY_ID=$(kamal secrets extract S3_ACCESS_KEY_ID ${SECRETS})
S3_BUCKET=$(kamal secrets extract S3_BUCKET ${SECRETS})
S3_ENDPOINT=$(kamal secrets extract S3_ENDPOINT ${SECRETS})
S3_REGION=$(kamal secrets extract S3_REGION ${SECRETS})
S3_SECRET_ACCESS_KEY=$(kamal secrets extract S3_SECRET_ACCESS_KEY ${SECRETS})

SECRET_KEY_BASE=$(kamal secrets extract SECRET_KEY_BASE ${SECRETS})

VAPID_PUBLIC_KEY=$(kamal secrets extract VAPID_PUBLIC_KEY ${SECRETS})
VAPID_PRIVATE_KEY=$(kamal secrets extract VAPID_PRIVATE_KEY ${SECRETS})
